<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_message_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="@dimen/small_image"
            android:layout_height="@dimen/small_image"
            android:layout_marginTop="@dimen/margin_average"
            android:src="@drawable/grey_node" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/left_node_bg">
            <TextView
                android:id="@+id/comment_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i love efetobore"
                style="@style/textview_message_left"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/timeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/info_textviews"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_username"
            android:text="Name"
           />
    </LinearLayout>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/delete"
        android:visibility="gone"
        android:background="@null"
        android:src="@drawable/ic_delete_black_24dp"/>
    </LinearLayout>
